{
    "files": [],
    "references": [
        { "path": "./tsconfig.app.json" },
        { "path": "./tsconfig.node.json" }
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./frontend/src/*"]
        },
        "noImplicitAny": false,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "allowJs": true,
        "noUnusedLocals": false,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "typeRoots": ["./types", "./node_modules/@types"]
}
